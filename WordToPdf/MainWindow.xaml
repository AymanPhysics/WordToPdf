<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordToPdf"
        mc:Ignorable="d"
        Title="Ejazat" Height="167" Width="343" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <Button x:Name="button" Content="Start" HorizontalAlignment="Center" Width="343" Foreground="#FFE7F926" BorderBrush="#FFFFF3F3" FontSize="72" Margin="0,0,0,34">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ProgressBar x:Name="MyProgressBar" Height="34" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
